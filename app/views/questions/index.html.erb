
<div class="container">
<h1>Questions</h1>
<table class="table">
	<% @questions.each do |question| %>
		
		<tbody>
			<tr>
				<td>
					<center><p>Votes</p>
					<p class="question-title"> <%= question.answers.count %></p></center>
				</td>
				<td>
					<center><p>Answers</p>
					<p class="question-title"> <%= question.answers.count %></p></center>
				</td>
				<td>
					<p class="question-title"><%= link_to question.title, question_path(question) %></p>
					<p class="question-data">Posted by <%= question.user.email %> / <%= time_ago_in_words(question.created_at) %> </p>
				</td>
			</tr>	
		</tbody>
	
	<% end %>
</table>
<%= link_to "Ask!", new_question_path, class: "btn btn-default" %>
</div>
